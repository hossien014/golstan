@page 
@model RoleModel

<h1>رول ها </h1>

<div>
 <p class="alert alert-success">@Model.massage</p>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Role name</th>
            <th scope="col">Remove</th>
        </tr>
    </thead>
    <tbody>
        
        @{
            int counter=0;
            foreach(var role in Model.roles){
                counter ++;
                <tr>
                    <th>@counter</th>
                    <th>@role.Name</th>

                    <th>
                        <form method="post">
                            <button type="submit" asp-page-handler="Delete" asp-route-id="@role.Id">delete</button>
                        </form>
                    </th>
                </tr>
            }
        }
        <tr>
            <th>رول جدید</th>
            <th>
                <form  method="post">
                    <input asp-for="roleName">
                    <input type="submit">
                </form>
            </th>
        </tr>
    </tbody>
</table>